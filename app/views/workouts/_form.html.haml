= simple_form_for(@workout, html: { class: 'form-horizontal' }) do |f|
= f.input :date, label: "Date", input_html: { class: "form-control" }
= f.input :date, label: "What area did you workout?", input_html: { class: "form-control" }
= f.input :date, label: "How were you feeling?", input_html: { class: "form-control" }
= f.input :date, label: "How long was the workout", input_html: { class: "form-control" }

